<%= form_tag login_path, method: :post do %>
  <div class="form-group">
    <div> <%= label_tag :email, "Email" %> </div>
    <div> <%= text_field_tag :email, nil, class: "form-control" %> </div>

  </div>
  <div class="form-group">
    <div> <%= label_tag :password, "Password" %> </div>
    <div> <%= password_field_tag :password, nil, class: "form-control" %> </div>
  </div>
  <br> <%= submit_tag "Login", class: "btn btn-primary" %>

<% end %>







