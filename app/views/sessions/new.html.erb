<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="form-container">
  <div class="span6 offset3" >
    <%= form_for(:session, url: sessions_path) do |f| %>

      <div><%= f.label :email %></div>

      <div><%= f.text_field :email %></div>

      <div><%= f.label :password %></div>
      <div><%= f.password_field :password %></div>

      <div><%= f.submit "Sign in", class: "btn btn-large btn-primary" %></div>
    <% end %>

    <p>New user? <%= link_to "Sign Up", signup_path %></p>
  </div>
</div>