<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :first_name, 'First name' %>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :last_name, 'Last name' %>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :course, 'Course' %>
    <%= f.text_field :course, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email, 'Email' %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :major, 'Major' %>
    <%= f.text_field :major, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :role, 'Role' %>
    <%= f.text_field :role, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :followers, 'Followers' %>
    <%= f.number_field :followers, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :following, 'Following' %>
    <%= f.number_field :following, class: 'form-control' %>
  </div>
  <%= f.submit 'Save', class: 'btn btn-primary' %>
<% end %>
