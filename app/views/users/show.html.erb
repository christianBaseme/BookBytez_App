<%= form_for @user do |f| %>
  <% provide(:title, @user.name) %>
  <div class="form-group">
    <%= f.text_field :first_name, class: 'form-control' %>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :course %>
    <%= f.text_field :course, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :major %>
    <%= f.text_field :major, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :role %>
    <%= f.text_field :role, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :followers %>
    <%= f.number_field :followers, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :following %>
    <%= f.number_field :following, class: 'form-control' %>
  </div>

  <div class="row">
    .
    .
    .
    <aside>
      .
      .
      .
    </aside>
    <div class="span8">
      <% if @user.posts.any? %>
        <h3>Posts (<%= @user.posts.count %>)</h3>
        <ol class="posts">
          <%= render @posts %>
        </ol>
        <%= will_paginate @posts %>
      <% end %>
    </div>
  </div>

  <%= f.submit 'Update', class: 'btn btn-primary' %>
<% end %>
